<% if notice %>
<p id="notice"><%= notice %></p>
<% end %>
<h1>Your Catalog. 
  <% if @index_count > 5 %>
    You've accessed this <%= pluralize(@index_count,'time') %>
  <% end %>
</h1>
<% @products.each do |p| %>
  <div class="entry" >
    <%= link_to image_tag(p.image_url), line_items_path(:product_id => p), :method => :post,
      :remote => true %>
    
    <h3><%= p.title %></h3>
    <%=sanitize p.description %>
    <div class="price_line" >
      <span class="price" ><%= sprintf("Rs. %0.02f",p.price) %></span>
      <%= button_to "Add To Cart", line_items_path(:product_id => p),
        :remote => true %>
    </div>
  </div>

<% end %>
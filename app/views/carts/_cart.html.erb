

<div class="cart_title">Your Shopping Cart</div>
<table>
  <%= render cart.line_items %>

  <tr class="total_line">
    <td colspan="2">Total</td>
    <td class="total_cell">Rs. <%= number_with_precision(cart.total_price, :precision=>2) %></td>
  </tr>

</table>

<%= button_to 'Empty Cart', cart, :method=>'delete', :confirm=>'Are you 100% sure?' %>
